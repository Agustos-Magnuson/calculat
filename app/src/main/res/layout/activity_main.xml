<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        tools:text="Enter"
        android:textSize="30sp"
        tools:ignore="ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/button">

        <TableRow tools:ignore="ExtraText,UselessParent">


            <Button
                android:id="@+id/button1.1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="1"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button1.2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="2"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button1.3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="3"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button1.4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="<--"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow tools:ignore="ExtraText,UselessParent">


            <Button
                android:id="@+id/button2.1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="4"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button2.2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="5"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button2.3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="6"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button2.4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="+"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow tools:ignore="ExtraText,UselessParent">


            <Button
                android:id="@+id/button3.1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="7"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button3.2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="8"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button3.3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="9"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button3.4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="-"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow tools:ignore="ExtraText,UselessParent">


            <Button
                android:id="@+id/button4.1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="0"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button4.2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="."
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button4.3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="/"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/button4.4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                tools:text="*"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>